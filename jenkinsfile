//                     env.M2_HOME = '/opt/apache-maven-3.9.6'
//                     env.PATH = "${env.M2_HOME}/bin:${env.PATH}"
//
//                     // Verificar a instalação do Maven
//                     sh 'mvn -v'
//                 }
//             }

        stage('Test') {
            steps {
                script {
                    bat 'mvn -e clean test -Dmaven.test.failure.ignore=true'
                }
            }
        }

        stage('Report') {
            steps {
                script {
                    bat 'mvn allure:report'

                    archiveArtifacts 'target/**'

                    allure(includeProperties: false, results: [[path: 'target/allure-results']])
                }
            }
        }
    }

    post {
        always {
            script {
                def buildResult = currentBuild.currentResult
                def buildNumber = env.BUILD_NUMBER

                def message = "# API Correcao | Relatorio de Testes\n"
                message += "**Branch:** release\n"
                message += "**Build:** ${buildNumber}\n"
                message += "**Status:** ${buildResult}\n"

                bat 'start chrome "http://localhost:8080/job/correcao-qa-api-pipeline/allure/"'

                sleep(time: 10, unit: 'SECONDS')

                bat 'C:\\Users\\Sales\\nircmd.exe savescreenshot allure-serve-screenshot.png'

                archiveArtifacts 'allure-serve-screenshot.png'

                def baseUrl = env.BUILD_URL + 'artifact/'
                def imageUrl = baseUrl + 'allure-serve-screenshot.png'

                discordSend description: message, webhookURL: "https://discord.com/api/webhooks/1212851937758937209/o5j4_OPhUd-OVY4tJqCteJTbPFQrTHMaE967Ezmi1xzbsFbJdMh3H1IuNkCcpE3wLgBs", image: "${imageUrl}"
            }
        }
    }
}
