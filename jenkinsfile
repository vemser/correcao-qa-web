pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }

//         stage('Instalação do Maven') {
//             steps {
//                 script {
//                     sh '''
//                         wget https://dlcdn.apache.org/maven/maven-3/3.9.6/binaries/apache-maven-3.9.6-bin.zip
//                         unzip apache-maven-3.9.6-bin.zip
//                         sudo mv apache-maven-3.9.6 /opt
//                     '''
//
